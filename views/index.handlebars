<img class="center-block img-responsive" src="http://www.clker.com/cliparts/6/4/5/c/11949863011820104413hamburger_ganson.svg.med.png">
<h1 style="text-align:center; color:red">Eat-Da-Burger!</h1>
<div class="container">
  <ol class="col-lg-4">
    {{#each burgers}}
      {{#unless this.devoured}}
         <li>
         <div class="text-center" style="border: black solid 1px; background-color:azure"> {{this.burger_name}}
           <form action="/{{this.id}}?_method=PUT" method="POST">
             <div class="form-group"> 
               <textarea class="form-control" rows="1" name="name" id="comment" placeholder="Enter Eater's Name Here"></textarea>
             </div>
             <input type="hidden" name="notDevoured" value="true">
             <button type="submit">Devour It!</button>
           </form>
         </div>
        </li>
      {{/unless}}
    {{/each}}
  </ol>

  <ol class="col-lg-4 col-lg-offset-4">
    {{#each burgers}}
      {{#if this.devoured}}
        <li>
          <div class="text-center" style="border: black solid 1px; background-color:azure; color:lightgrey"> {{this.burger_name}} eaten by <span style="color:red"> {{this.customer_name}} </span> </div>
          <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="false">
          </form>
        </li>
      {{/if}}
    {{/each}}
  </ol>
</div>
<form class="create-update-form text-center" action="/" method="POST">
  <div class="form-group col-lg-4 col-lg-offset-4"> 
    <textarea class="form-control" rows="5" name="name" id="comment"></textarea>
  </div>
  <div class="text-center col-lg-4 col-lg-offset-4">
    <button class="btn btn-primary text-center" type="submit">Submit</button>
    <div>Enter a burger you want to eat. Click the "Submit" button.</div>
  </div>
</form>
